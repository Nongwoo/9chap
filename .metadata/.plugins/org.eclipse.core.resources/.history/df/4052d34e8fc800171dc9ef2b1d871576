import java.util.*;

public class Rain {
	
		public static void printavg(Vector<Integer> ra) { //벡터 ra의 정수의 평균출력
			
			int avg = 0;
			int sum = 0;
			for(int i =0; i<ra.size(); i++) {
				int n = ra.elementAt(i); //벡터의 i 번째 정수
				sum += n;
				avg = sum / ra.size();
				
				}
			System.out.println("현재 평균 " + avg );
			}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanner = new Scanner(System.in);
		Vector<Integer> ra = new Vector<Integer>();
		
		
		while(true) {
		System.out.println("강수량 입력(0 입력시 종료)");
		int r = scanner.nextInt();	
		ra.add(r);	
		printavg(ra);
		
		if(r == 0) // 입력된 수가 0이면 종료
 			break;
	}
	
	
	}
}

	
